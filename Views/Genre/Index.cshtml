@{
    Layout = "_EditorLayout";
}
@model List<Genre>;
    <h2>Lista Generi</h2>
    <a href="@Url.Action("Create", "Genre")" class="btn btn-secondary">Nuovo +</a>
    @if(Model.Count == 0){
        <div class="alert container" role="alert">
                Non sono preseenti Generi nella tua lista
        </div>
    }
    else{
        @*<div class="container-fluid debug">
            <div class="row">
                <div class="col-12 col-md-6 debug"></div>
                <div class="col-12 col-md-6 debug"></div>

            </div>
        </div>*@
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#Id</th>
              <th scope="col">Nome</th>
              <th scope="col">Azioni</th>
            </tr>
          </thead>
          <tbody>
              @foreach(Genre genre in Model){

                <tr>
                    <th scope="row">@genre.Id</th>
                    <td>@genre.Name</td>
                    <td>
                        <a href="@Url.Action("Update", "Genre", new{Id = genre.Id})">Modifica</a>
                        <form asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                            <input type="submit" class="btn rounded-pill" value="Elimina">
                        </form>
                    </td>
                </tr>
              }
          </tbody>
        </table>

    }
