@{

    Layout = "_EditorLayout";
}
@model Actor;

    <h2>Modifica</h2>
        <form asp-controller="Actor" asp-action="Update" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="inputPassword6" class="col-form-label"><strong>Nome Attore:</strong></label>
                </div>
                <div class="col-auto">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    <input asp-for="@Model.Name" class="d-block form-control" />
                </div>        
            </div>
              <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label class="col-form-label"><strong>Cognome Attore:</strong></label>
                </div>
                <div class="col-auto">
                    <input asp-for="@Model.Surname" class="d-block form-control" />
                    <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                </div>         
            </div>
            <div class="text-end">
                <input type="submit" class="btn btn-small  btn-secondary" value="Salva">
            </div>
        </form>

