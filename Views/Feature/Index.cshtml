@{
    Layout = "_EditorLayout";
}
@model List<Feature>;
    <h2>Lista Features</h2>
    <a href="@Url.Action("Create", "Feature")" class="btn btn-secondary">Nuova +</a>
    @if(Model.Count == 0){
        <div class="alert container" role=" alert">
            Non sono preseenti caratteristiche nella tua lista
        </div>
    }
    else{
        @*<div class="container-fluid debug">
            <div class="row">
                <div class="col-12 col-md-6 debug"></div>
                <div class="col-12 col-md-6 debug"></div>

            </div>
        </div>*@
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#Id</th>
              <th scope="col">Name</th>
              <th scope="col">Azioni</th>
            </tr>
          </thead>
          <tbody>
              @foreach(Feature feature in Model){

                <tr>
                  <th scope="row">@feature.Id</th>
                  <td>@feature.Name</td>
                  <td>
                      <a href="@Url.Action("Update", "Feature", new{Id = feature.Id})">Modifica</a>

                      <form asp-controller="Feature" asp-action="Delete" asp-route-id="@feature.Id" method="post" class="d-inline">
                      @Html.AntiForgeryToken()
                         <input type="submit" class="btn rounded-pill" value="Elimina">
                      </form>
                  </td>
                </tr>
              }
          </tbody>
        </table>

    }
